    {% for article in articles %}
    <div>
        <h2>{{ article.title }}</h2>
        <time>{{ article.dateRedac | date("Y-m-d")}}</time>
        <div>{{ article.content }}</div>
        <a href="{{ path('actu_article_retrieve', {
